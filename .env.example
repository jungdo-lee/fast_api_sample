# App
APP_NAME=sample-auth-api
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=local

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database (SQLite for local dev)
DATABASE_URL=sqlite+aiosqlite:///./test.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ISSUER=sample-auth-api
JWT_AUDIENCE=sample-app
JWT_ACCESS_TOKEN_EXPIRE_SECONDS=1800
JWT_REFRESH_TOKEN_EXPIRE_SECONDS=2592000
JWT_PRIVATE_KEY_PATH=keys/private.pem
JWT_PUBLIC_KEY_PATH=keys/public.pem
JWT_ALGORITHM=RS256

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_SIGNUP=3/minute
RATE_LIMIT_REFRESH=10/minute
RATE_LIMIT_DEFAULT=100/minute

# Logging
LOG_LEVEL=DEBUG
LOG_JSON=false
